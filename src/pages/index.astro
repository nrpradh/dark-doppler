---
import App from "../react/App.jsx";

const title = "Arven Kaito â€“ Developer Portfolio";
const description = "Portfolio for Arven Kaito, showcasing projects, skills, and contact information.";
---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <!-- Canonical URL -->
    <link rel="canonical" href="https://arvenkaito.com/" />

    <!-- OpenGraph -->
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:type" content="website" />
    <meta property="og:image" content="/og-image.png" />

    <!-- JSON-LD Schema -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Person",
        "name": "Arven Kaito",
        "jobTitle": "Frontend Developer",
        "url": "https://arvenkaito.com"
      }
    </script>
  </head>

  <body>
    <App client:load />
  </body>
</html>
